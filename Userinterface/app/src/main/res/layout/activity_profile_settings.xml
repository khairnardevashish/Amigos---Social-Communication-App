<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pro"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/tran" />

    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/circleImageView"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal|center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/username"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:gravity="center_horizontal|center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_alignRight="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_below="@+id/email"
        android:fontFamily="serif"
        android:gravity="center_horizontal|center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_alignEnd="@+id/circleImageView"
        android:layout_alignLeft="@+id/circleImageView"
        android:layout_alignRight="@+id/circleImageView"
        android:layout_alignStart="@+id/circleImageView"
        android:layout_below="@+id/phone"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/status"
        android:layout_marginTop="64dp"
        android:background="@drawable/tran1"
        android:layout_toEndOf="@+id/status"
        android:layout_toRightOf="@+id/status"
        app:srcCompat="@drawable/statusedit" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/tran1"
        app:srcCompat="@drawable/statuseditdone"
        android:layout_alignTop="@+id/imageView3"
        android:layout_toRightOf="@+id/status"
        android:layout_toEndOf="@+id/status" />


</RelativeLayout>
</ScrollView>